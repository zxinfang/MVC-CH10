@model WebApplication1.ViewModels.CartBuyViewModel

@{
    ViewBag.Title = User.Identity.Name + "的購物車";
}

<h2>購物車內容</h2>
<table>
    @if (!Model.DataList.Count.Equals(0))
    {
        <thead>
            <tr>
                <td>
                    @Html.LabelFor(p => p.DataList[0].Item.Name)
                </td>
                <td>
                    @Html.LabelFor(p => p.DataList[0].Item.Price)
                </td>
            </tr>
        </thead>
        foreach (var item in Model.DataList)
        {
            <tr>
                <td>
                    @Html.ActionLink(item.Item.Name, "Item", "Item", new { Id = item.Item.Id },null)
                </td>
                <td>
                    @item.Item.Price
                </td>
                <td>
                    @Html.ActionLink("從購物車取出", "Pop", new { Id = item.Item.Id, toPage = "Cart" })
                </td>
            </tr>
        }
    }
    else
    {
        <tr>
            <td>
                購物車內無商品
            </td>
        </tr>
    }
</table>
@if (Model.isCartSave)
{
    <text>購物車已保存，請按此</text>
    @Html.ActionLink("取消", "CartSaveRemove")
}
else
{
    <text>購物車尚未保存，請按此</text>
     @Html.ActionLink("保存", "CartSave")
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
